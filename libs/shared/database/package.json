{
  "name": "@nx-mono-repo/shared-database",
  "version": "1.0.0",
  "description": "Shared database schema and utilities for the hotel management system",
  "main": "index.js",
  "scripts": {
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:migrate:reset": "prisma migrate reset --schema=./prisma/schema.prisma --force",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "tsx seeds/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "tsx": "^4.6.2",
    "@types/node": "^20.10.5"
  }
}
