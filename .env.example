# Environment Configuration
NODE_ENV=development
LOG_LEVEL=info

# Service Ports
PAYMENT_SERVICE_PORT=3001
RESERVATION_SERVICE_PORT=3002
LEDGER_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=booking_platform
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nx_mono_repo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Docker
COMPOSE_PROJECT_NAME=nx_mono_repo

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# bKash Configuration
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh/v1.2.0-beta

# Nagad Configuration
NAGAD_MERCHANT_ID=your-nagad-merchant-id
NAGAD_MERCHANT_PRIVATE_KEY=your-nagad-merchant-private-key
NAGAD_PG_PUBLIC_KEY=your-nagad-pg-public-key
NAGAD_BASE_URL=http://sandbox.mynagad.com:10080/remote-payment-gateway-1.0

# SSLCommerz Configuration
SSLCOMMERZ_STORE_ID=your-sslcommerz-store-id
SSLCOMMERZ_STORE_PASSWORD=your-sslcommerz-store-password
SSLCOMMERZ_BASE_URL=https://sandbox.sslcommerz.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WHATSAPP_NUMBER=your-twilio-whatsapp-number

# Base URL for webhooks
BASE_URL=http://localhost

# MCP Services URLs
PAYMENT_SERVICE_URL=http://localhost:3001
RESERVATION_SERVICE_URL=http://localhost:3002
LEDGER_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004

# API Keys (replace with actual values)
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# External Services
EXTERNAL_SERVICE_URL=https://api.example.com

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# Feature Flags
ENABLE_FEATURE_X=true
ENABLE_FEATURE_Y=false
