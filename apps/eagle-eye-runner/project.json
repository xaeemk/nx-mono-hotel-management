{
  "name": "eagle-eye-runner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/eagle-eye-runner/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/eagle-eye-runner",
        "main": "apps/eagle-eye-runner/src/main.ts",
        "tsConfig": "apps/eagle-eye-runner/tsconfig.app.json",
        "assets": ["apps/eagle-eye-runner/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/eagle-eye-runner/src/environments/environment.ts",
              "with": "apps/eagle-eye-runner/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/node:execute",
      "options": {
        "buildTarget": "eagle-eye-runner:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/eagle-eye-runner"],
      "options": {
        "jestConfig": "apps/eagle-eye-runner/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:app", "scope:eagle-eye"]
}
